
          {{#each blog}}
            <div class="row" style="margin-bottom:40px;">
                <div class="col-sm-4 col-xs-6">
                    <div class="photo">
                        <img src="{{this.image}}" alt="">
                    </div>

                </div>
                <div class="col-sm-6 col-xs-6" style="line-height:1.1">

                    <p style="font-weight:bold;font-size:25px;"><a href="./blog/{{this.id}}">{{this.name}}</a></p>
                    <br>
                    <p>{{this.content}}</p>
                    <span>Tác giả:</span> <span>{{this.creator}}</span>  <span style="margin-left:30px">View</span>
                    <span>{{this.views}}</span>
                </div>

            </div>
          {{/each}}
