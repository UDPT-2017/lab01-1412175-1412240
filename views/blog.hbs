{{#each blogs}}
           <div class="row" style="margin-bottom:40px;">
               <div class="col-sm-4 col-xs-6">
                   <div class="photo">
                       <img src="{{image}}" alt="">
                   </div>

               </div>
               <div class="col-sm-6 col-xs-6" style="line-height:1.1">

                   <p style="font-weight:bold;font-size:25px;"><a href="./blog/{{this.id}}">{{name}}</a></p>
                   <br>
                   <p>{{content}}</p>
                   <span>Tác giả:</span> <span>{{creator}}</span>  <span style="margin-left:30px">View</span>
                   <span>{{views}}</span>
               </div>

           </div>
 {{/each}}
